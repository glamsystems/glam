{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "playground/src/*"
      ],
      "@glam/anchor": [
        "anchor/src/index.ts"
      ]
    }
  },
  "include": [
    "playground/next-env.d.ts",
    "playground/**/*.ts",
    "playground/**/*.tsx",
    "playground/.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "anchor",
    "api",
    "dist",
    ".*"
  ]
}
